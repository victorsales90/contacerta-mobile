<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorBranco"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="br.unifor.victor.contacerta.fragment.ContaFragment">

    <!-- TODO: Update blank fragment layout -->


    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTA POR PESSOA"
        android:textColor="@android:color/black"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorPrimaryDark"
        tools:text="CONTA POR PESSOA" />

    <!--<ToggleButton-->
        <!--android:id="@+id/toggleButton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="right"-->

        <!--android:text="ToggleButton" />-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:id="@+id/linear_textview_pessoa">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COLETIVA"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textPorPessoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0,00"
            android:textColor="@android:color/black"
            android:textSize="100sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:id="@+id/linear_listview">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="INDIVIDUAL (CLIQUE)"
            android:textColor="@android:color/black" />

    <ListView
        android:id="@+id/lv_contatos_contas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorPrimaryDark"/>
    </LinearLayout>


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TOTAL DA CONTA"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/textViewConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0,00"
        android:textColor="@android:color/black"
        android:textSize="100sp"
       />




</LinearLayout>
